@using SiteAngular.Models.ViewModels;
@model StudentViewModel
<div class="row">
    <form name="stdFrm" class="form-horizontal" role="form" ng-submit="Create(student)">
        <div class="col-md-7 col-lg-7">
            <div class="form-group form-group-sm has-feedback" ng-class="{'has-error':stdFrm.FirstName.$valid==false,'has-success':stdFrm.FirstName.$valid==true}">
                @Html.LabelFor(x => x.FirstName, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    <input type="text" name="FirstName" class="form-control input-sm" placeholder="Please enter first name" ng-model="student.FirstName" required />
                    <span class="glyphicon  form-control-feedback" ng-class="{'glyphicon-remove':stdFrm.Address.$valid==false,'glyphicon-ok':stdFrm.Address.$valid==true}"></span>
                </div>
            </div>
            <div class="form-group form-group-sm has-feedback" ng-class="{'has-error':stdFrm.LastName.$valid==false,'has-success':stdFrm.LastName.$valid==true}">
                @Html.LabelFor(x => x.LastName, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    <input type="text" name="LastName" class="form-control input-sm" placeholder="Please enter last name" ng-model="student.LastName" required />
                    <span class="glyphicon glyphicon-ok form-control-feedback" ng-class="{'glyphicon-remove':stdFrm.LastName.$valid==false,'glyphicon-ok':stdFrm.LastName.$valid==true}"></span>
                </div>
            </div>
            <div class="form-group form-group-sm has-feedback" ng-class="{'has-error':stdFrm.Address.$valid==false,'has-success':stdFrm.Address.$valid==true}">
                @Html.LabelFor(x => x.Address, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    <textarea name="Address" class="form-control" placeholder="Please enter last name" ng-model="student.Address" rows="4" required />
                    <span class="glyphicon glyphicon-ok form-control-feedback" ng-class="{'glyphicon-remove':stdFrm.Address.$valid==false,'glyphicon-ok':stdFrm.Address.$valid==true}"></span>
                    <p class="help-block">Example block-level help text here.</p>
                </div>
            </div>
            <div class="form-group form-group-sm has-feedback" ng-class="{'has-error':stdFrm.DOB.$valid==false,'has-success':stdFrm.DOB.$valid==true}">
                @Html.LabelFor(x => x.DOB, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    <input type="text" name="DOB" class="form-control input-sm" placeholder="Please enter date of birth" ng-model="student.DOB" required />
                    <span class="glyphicon glyphicon-ok form-control-feedback" ng-class="{'glyphicon-remove':stdFrm.DOB.$valid==false,'glyphicon-ok':stdFrm.DOB.$valid==true}"></span>
                    <p class="help-block">Example block-level help text here.</p>
                </div>
            </div>
            <div class="form-group form-group-sm has-feedback" ng-class="{'has-error':stdFrm.Phone.$valid==false,'has-success':stdFrm.Phone.$valid==true}">
                @Html.LabelFor(x => x.Phone, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    <input type="text" name="Phone" class="form-control input-sm" placeholder="Please enter phone number" ng-model="student.Phone" required />
                    <span class="glyphicon glyphicon-ok form-control-feedback" ng-class="{'glyphicon-remove':stdFrm.Phone.$valid==false,'glyphicon-ok':stdFrm.Phone.$valid==true}"></span>
                    <p class="help-block">Example block-level help text here.</p>
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-check"></i> Submit</button>
            <button type="button" class="btn btn-danger btn-sm" ui-sref="List"><i class="fa fa-times"></i> Cancel</button>

        </div>

        <div class="col-md-5 col-lg-5">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(x => x.Building, new { @class = "col-lg-3" })
                        <div class="col-lg-9">
                            @Html.TextBoxFor(x => x.Building, new { @class = "form-control input-sm", @placeholder = "enter first name", @ng_model = "student.Addresses.Building" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Street, new { @class = "col-lg-3" })
                        <div class="col-lg-9">
                            @Html.TextBoxFor(x => x.Street, new { @class = "form-control input-sm", @placeholder = "enter last name", @ng_model = "student.Addresses.Street" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.LandMark, new { @class = "col-lg-3" })
                        <div class="col-lg-9">
                            @Html.TextBoxFor(x => x.LandMark, new { @class = "form-control input-sm", @placeholder = "enter last name", @ng_model = "student.Addresses.LandMark" })
                            <p class="help-block">Example block-level help text here.</p>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.District, new { @class = "col-lg-3" })
                        <div class="col-lg-9">
                            @Html.TextBoxFor(x => x.District, new { @class = "form-control input-sm", @placeholder = "enter last name", @ng_model = "student.Addresses.District" })
                            <p class="help-block">Example block-level help text here.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>