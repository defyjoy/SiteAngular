@using SiteAngular.Models.ViewModels
@model IEnumerable<StudentViewModel>

<table class="table table-condensed table-responsive " ng-controller="List">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address Name</th>
            <th>Date of birth</th>
            <th>Phone</th>
        </tr>
    </thead>
    <tbody ng-repeat="student in students">
        <tr>
            <td>
                {{student.FirstName}}
            </td>
            <td>
                {{student.LastName}}
            </td>
            <td>
                {{student.Address}}
            </td>
            <td>
                {{student.DOB|date:'dd - MMM - yyyy'}}
            </td>
            <td>
                {{student.Phone}}
            </td>
            <td>
                <a href="#" class="btn btn-danger btn-xs btn-round" ng-click="Delete(student.StudentGuid)"><i class="fa fa-trash-o"></i></a>
                <a href="#" class="btn btn-primary btn-xs btn-round" ng-click="Edit(student.StudentGuid)"><i class="fa fa-edit"></i></a>
                <a href="#" class="btn btn-success btn-xs btn-round"><i class="fa fa-unlock"></i></a>
            </td>
        </tr>
    </tbody>
</table>